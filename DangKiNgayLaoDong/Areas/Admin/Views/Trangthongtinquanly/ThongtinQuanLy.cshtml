

@{
    ViewBag.Title = "Trang Quản Lý";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Head {
    <link rel="stylesheet" href="~/Areas/Admin/CSS/Trangthongtinquanly.css">
}
<div class="nav-content-text">
    <span class="nav-content-text"> Thông Tin Quản Lý</span>
</div>
<div class="row">
    <!-- Menu Bên Trái -->
    <div class="col-md-3">
        <!-- Nút bấm để mở menu -->
        <button class="menu-toggle" onclick="toggleMenu()">
            <i class="fas fa-bars"></i> Menu
        </button>

        <!-- Danh sách menu -->
        <div class="box-container-menu" id="menu">
            <a href="TrangNguoiQuanLy.html"><i class="fa fa-home"></i> Trang chủ</a>
            <a href="TrangDKLD.html" class="icon-link">
                <i class="fa-regular fa-calendar-plus"></i> Tạo lịch đăng
                kí
            </a>
            <a href="LichLaoDong.html" class="icon-link"><i class="fa fa-calendar"></i> Lịch Lao Động</a>
            <a href="ThongBao.html"><i class="fas fa-bell"></i> Thông báo</a>
            <a href="Thongke.html"><i class="fa fa-bar-chart"></i> Thống kê</a>
            <a href="XacNhanHoanThanh.html"><i class="fa fa-check-circle"></i> Xác nhận hoàn thành</a>
        </div>
    </div>

    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            var button = document.querySelector(".menu-toggle i");

            if (menu.style.maxHeight === "0px" || menu.style.maxHeight === "") {
                menu.style.maxHeight = "500px"; // Mở menu
                button.classList.remove("fa-bars");
                button.classList.add("fa-times"); // Đổi icon thành "X"
            } else {
                menu.style.maxHeight = "0px"; // Đóng menu
                button.classList.remove("fa-times");
                button.classList.add("fa-bars"); // Đổi lại icon "Menu"
            }
        }
    </script>

    <!-- Thông Tin Tài Khoản -->
    <div class="col-md-9">
        <div class="info-card">
            <h2 class="title">Thông tin tài khoản</h2>
            <div class="profile-img-container">
                <img src="~/image/Avarta.png" alt="Ảnh đại diện" class="profile-img">
                <div class="overlay">Thay đổi ảnh</div>
            </div>

            <div class="info">
                <p><strong>MSQL:</strong> 2025001</p>
                <p><strong>Họ và tên:</strong> Huỳnh Tiến Hiếu</p>
                <p><strong>Email:</strong> Huynhtienhieu@gmail.com</p>
            </div>
            <div class="info">
                <p><strong>Ngày sinh:</strong> 01/01/2000</p>
                <p><strong>Giới tính:</strong> Nam</p>
                <p><strong>Địa chỉ:</strong> Cao Lãnh, Đồng Tháp</p>
                <p><strong>Số điện thoại:</strong> 0123456789</p>
                <p><strong>Vai trò:</strong> Quản lý</p>
            </div>
            <button class="btn btn-primary">Chỉnh sửa thông tin</button>
        </div>
    </div>
</div>



