

@{
    ViewBag.Title = "Trang Thông Tin Quản Lý";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Head {
    <link rel="stylesheet" href="~/Areas/Admin/CSS/Trangthongtinquanly.css">
}
<div class="nav-content-text">
    <span class="nav-content-text"> Thông Tin Quản Lý</span>
</div>
<div class="row">
    <!-- Menu Bên Trái -->
    <div class="col-md-3">
        <!-- Nút bấm để mở menu -->
        <button class="menu-toggle" onclick="toggleMenu()">
            <i class="fas fa-bars"></i> Menu
        </button>
        <!-- Danh sách menu -->
        <div class="box-container-menu" id="menu">
            <a href="~/Admin/TrangNguoiQuanly/TrangNguoiQuanly"><i class="fa fa-home"></i> Trang chủ</a>
            <a href="TrangDKLD.html" class="icon-link"><i class="fa-regular fa-calendar-plus"></i> Tạo lịch đăng kí</a>
            <a href="~/Admin/LichlaoDong/LichLaodong" class="icon-link"><i class="fa fa-calendar"></i> Lịch Lao Động</a>
            <a href="~/Admin/Thongbao/ThongBao"><i class="fas fa-bell"></i> Thông báo</a>
            <a href="~/Admin/ThongKe/ThongKe"><i class="fa fa-bar-chart"></i> Thống kê</a>
            <a href="~Admin/XacNhanHoanThanh/XacNhanHoanThanh"><i class="fa fa-check-circle"></i> Xác nhận hoàn thành</a>
        </div>
    </div>

    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            var button = document.querySelector(".menu-toggle i");

            if (menu.style.maxHeight === "0px" || menu.style.maxHeight === "") {
                menu.style.maxHeight = "500px"; // Mở menu
                button.classList.remove("fa-bars");
                button.classList.add("fa-times"); // Đổi icon thành "X"
            } else {
                menu.style.maxHeight = "0px"; // Đóng menu
                button.classList.remove("fa-times");
                button.classList.add("fa-bars"); // Đổi lại icon "Menu"
            }
        }
    </script>

    <div class="col-md-9">
        <div class="info-card">
            <h2 class="title">Thông tin tài khoản</h2>

            <div class="profile-img-container">
                <img src="../image/Avarta.png" alt="Ảnh đại diện" class="profile-img">
                <div class="overlay">Thay đổi ảnh</div>
            </div>

            <div class="info-container">
                <!-- Left Column -->
                <div class="info">
                    <p><strong>MSQL:</strong> 2025001</p>
                    <p><strong>Họ và tên:</strong> Huỳnh Tiến Hiếu</p>
                    <p><strong>Ngày sinh:</strong> 01/01/2000</p>
                    <p><strong>Email:</strong> Huynhtienhieu@gmail.com</p>
                </div>
                <!-- Right Column -->
                <div class="info">
                    <p><strong>Giới tính:</strong> Nam</p>
                    <p><strong>Địa chỉ:</strong> Cao Lãnh, Đồng Tháp</p>
                    <p><strong>Số điện thoại:</strong> 0123456789</p>
                    <p><strong>Vai trò:</strong> Quản lý</p>
                </div>
            </div>

            <button class="btn btn-primary" id="editButton">Chỉnh sửa thông tin</button>
        </div>
    </div>

    <!-- Form chỉnh sửa -->
    <div class="edit-form-modal" id="editFormModal" style="display: none;">
        <div class="edit-form">
            <h2 class="form-title">Chỉnh sửa thông tin</h2>
            <form id="editForm">
                <div class="form-group">
                    <label for="msql">MSQL:</label>
                    <input type="text" id="msql" class="form-input" value="2025001" readonly>
                </div>

                <div class="form-group">
                    <label for="name">Họ và tên:</label>
                    <input type="text" id="name" class="form-input" value="Huỳnh Tiến Hiếu">
                </div>

                <div class="form-group">
                    <label for="dob">Ngày sinh:</label>
                    <input type="date" id="dob" class="form-input" value="2000-01-01">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="form-input" value="Huynhtienhieu@gmail.com">
                </div>

                <div class="form-group">
                    <label for="gender">Giới tính:</label>
                    <select id="gender" class="form-input">
                        <option value="Nam" selected>Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="address">Địa chỉ:</label>
                    <input type="text" id="address" class="form-input" value="Cao Lãnh, Đồng Tháp">
                </div>

                <div class="form-group">
                    <label for="phone">Số điện thoại:</label>
                    <input type="text" id="phone" class="form-input" value="0123456789">
                </div>

                <div class="form-group">
                    <label for="role">Vai trò:</label>
                    <input type="text" id="role" class="form-input" value="Quản lý">
                </div>

                <div class="form-buttons">
                    <button type="submit" class="btn btn-save">Lưu</button>
                    <button type="button" class="btn btn-cancel" id="closeFormButton">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>



