    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Gán sự kiện cho tất cả nút "Duyệt"
            document.querySelectorAll(".btn-duyet").forEach(button => {
                button.addEventListener("click", function () {
                    duyet(this);
                });
            });
        });

        function duyet(button) {
            let row = button.closest("tr"); // Lấy hàng chứa nút "Duyệt"
            let tableApproved = document.getElementById("table-approved"); // Lấy bảng "Đã Duyệt"

            // Tạo một hàng mới từ dữ liệu hàng hiện tại
            let newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td>${row.cells[0].innerText}</td>
                <td>${row.cells[1].innerText}</td>
                <td>${row.cells[2].innerText}</td>
                <td>${row.cells[3].innerText}</td>
                <td>${row.cells[4].innerText}</td>
                <td><span class="status-approved">Đã Duyệt</span></td>
                `;

            // Thêm hàng vào bảng "Đã Duyệt"
            tableApproved.appendChild(newRow);

            // Xóa hàng khỏi bảng "Chờ Duyệt"
            row.remove();
        }
    </script>



    <script>
        document.getElementById('userMenu').addEventListener('click', function (event) {
